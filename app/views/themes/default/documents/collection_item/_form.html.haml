
.span-14.blogEntry.form
  .title.slugOrigin
    %h4= 'Name'
    %p
      = f.text_field :title, :class => 'span-14 text'

  = render_partial_from_theme "documents/shared/slug_field", :locals => {:f => f, :document => document}

  .content
    %h4= "Post"
    %p
      = f.text_area :content, :class => 'span-14 markItUp'

  .tags
    %h4= "Tags"
    %p
      = f.text_field :tag_list, :class => 'text'

  = form_revision_comment(f, document)

  %h3 Advanced Options
  .advancedOptions
    = form_advanced_options(f, document, :summary, :locale, :published, :user)
    = form_revision_history(f, document)
